{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./src",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./lib",
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["tests"],
  "lib": ["es2015"]
}
